{
	"name": "keyes",
	"version": "1.0.0",
	"private": false,
	"description": "A tiny package for intercepting keypresses and firing callbacks.",
	"repository": "https://github.com/Renddslow/keyes",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {
		"build": "esbuild --outfile=dist/index.js src/index.ts --minify",
		"test": "ava",
		"coverage": "nyc ava --exclude",
		"postbuild": "tsc --emitDeclarationOnly"
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^17.0.25",
		"ava": "^4.2.0",
		"esbuild": "^0.14.36",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.8",
		"nyc": "^15.1.0",
		"prettier": "^2.6.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"dequal": "^2.0.2"
	}
}
